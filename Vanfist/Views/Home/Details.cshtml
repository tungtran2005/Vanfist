@model Vanfist.DTOs.Responses.ModelResponse

<div class="container py-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden animate__animated animate__fadeInUp">
        <div class="row g-0">
            <!-- image product -->
            <div class="col-md-6 bg-light d-flex align-items-center justify-content-center p-4" data-aos="zoom-in">
                <div id="productCarousel"
                     class="carousel slide w-100"
                     data-bs-ride="false"
                     data-bs-interval="false"
                     data-bs-touch="false"
                     data-bs-keyboard="false">
                    <div class="carousel-inner text-center">
                        @if (Model.Attachments != null && Model.Attachments.Any())
                        {
                            var imgs = Model.Attachments.ToList();
                            for (int i = 0; i < imgs.Count; i++)
                            {
                                var img = imgs[i];
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@img.Url"
                                         class="d-block mx-auto img-fluid rounded-3 shadow-sm"
                                         style="max-height:400px;"
                                         alt="@img.FileName" />
                                </div>
                            }
                        }
                        else
                        {
                            <div class="carousel-item active">
                                <img src="~/images/no-image.png"
                                     class="d-block mx-auto img-fluid rounded-3 shadow-sm"
                                     style="max-height:400px;"
                                     alt="No Image" />
                            </div>
                        }
                    </div>

                    <!-- button control -->
                    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Trước</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Tiếp</span>
                    </button>
                </div>
            </div>

            <!-- in4 product-->
            <div class="col-md-6 p-5" data-aos="fade-left">
                <h2 class="fw-bold mb-2 animate__animated animate__fadeInDown">@Model.Name</h2>
                <span class="badge bg-success mb-3 animate__animated animate__pulse animate__infinite">Còn hàng</span>
                <h3 class="text-danger fw-bold mb-4 animate__animated animate__fadeInUp">
                    @string.Format("{0:N0} VND", Model.Price)
                </h3>

                <div class="mb-4">
                    <h5 class="fw-semibold mb-3">Thông số kỹ thuật</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><i class="bi bi-arrows-fullscreen text-primary me-2"></i><strong>Chiều dài:</strong> @Model.Length mm</li>
                        <li class="list-group-item"><i class="bi bi-arrows"></i> <strong>Chiều rộng:</strong> @Model.Width mm</li>
                        <li class="list-group-item"><i class="bi bi-arrows-vertical"></i> <strong>Chiều cao:</strong> @Model.Height mm</li>
                        <li class="list-group-item"><i class="bi bi-rulers"></i> <strong>Chiều dài cơ sở:</strong> @Model.Wheelbase mm</li>
                        <li class="list-group-item"><i class="bi bi-fuel-pump"></i> <strong>NEDC:</strong> @Model.NEDC km</li>
                        <li class="list-group-item"><i class="bi bi-lightning-charge"></i> <strong>Công suất tối đa:</strong> @Model.MaximumPower HP</li>
                        <li class="list-group-item"><i class="bi bi-speedometer2"></i> <strong>Momen xoắn tối đa:</strong> @Model.MaximumTorque Nm</li>
                        <li class="list-group-item"><i class="bi bi-circle"></i> <strong>Rim Size:</strong> @Model.RimSize inch</li>
                        <li class="list-group-item"><i class="bi bi-palette"></i> <strong>Màu sắc:</strong> @Model.Color</li>
                        <li class="list-group-item"><i class="bi bi-tag"></i> <strong>Danh mục:</strong> @Model.CategoryName</li>
                    </ul>
                </div>

                <div class="d-flex gap-3 mt-4">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-secondary btn-lg shadow-sm hover-rise">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                    @if (User.IsInRole("User"))
                    {
                        <a href="#consultation-form" class="btn btn-primary btn-lg shadow-sm hover-rise">
                        <i class="bi bi-person-lines-fill"  id="buy">Mua ngay</i>
                        </a>
                    }
                    else if (User.IsInRole("Admin"))
                    {
                        <a href="@Url.Action("Update", "Model", new { id = Model.Id })"
                           class="btn btn-warning btn-lg shadow-sm hover-rise">
                            <i class="bi bi-pencil-square"></i> Sửa
                        </a>
                        <a href="@Url.Action("Delete", "Model", new { id = Model.Id })"
                           class="btn btn-danger btn-lg shadow-sm hover-rise">
                            <i class="bi bi-trash"></i> Xóa
                        </a>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
@if (User.IsInRole("User"))
{
    <div class="container py-5" id="consultation-form">
        <div class="card shadow-lg border-0 rounded-4 overflow-hidden animate__animated animate__fadeInUp">
            <div class="card-body p-5">
                <h2 class="card-title text-center fw-bold mb-5">Thông tin khách hàng</h2>
                <form id="invoiceForm" method="post">
                    <input type="hidden" name="ModelId" value="@Model.Id" />
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="LastName" name="LastName" required>
                                <label for="LastName">Họ</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="FirstName" name="FirstName" required>
                                <label for="FirstName">Tên</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="Number" name="Number" required>
                                <label for="Number">Số điện thoại</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="email" class="form-control" id="Email" name="Email" required>
                                <label for="Email">Email</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="City" name="City" required>
                                <label for="City">Thành phố</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea class="form-control" id="Address" name="Address" style="height: 100px"></textarea>
                                <label for="Address">Địa chỉ chi tiết</label>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea class="form-control" id="Description" name="Description" style="height: 100px"></textarea>
                                <label for="Description">Ghi chú</label>
                            </div>
                        </div>
                    </div>
                    <div class="text-center mt-5">
                        <button type="submit" class="btn btn-primary btn-lg shadow-sm hover-rise">
                            <i class="bi bi-check-circle">Xác nhận mua</i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
