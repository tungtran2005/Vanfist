<!-- Bootstrap Icons + JS  -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $(function(){
        $("#invoiceForm").on("submit", function(e){
            e.preventDefault();

            const payload = {
                ModelId: @Model.Id,
                LastName: $("#LastName").val() || "Khách",
                FirstName: $("#FirstName").val() || "Hàng",
                Number: $("#Number").val() || "0000000000",
                Email: $("#Email").val() || "khachhang@vanfist.com",
                City: $("#City").val() || "Không xác định",
                Address: $("#Address").val() || ("Đăng ký tư vấn sản phẩm: " + "@Model.Name"),
                Description: $("#Description").val() || "Không có ghi chú",
                TotalPrice : @Json.Serialize(Model.Price),
                Details: "Mua sản phẩm: " + @Model.Id,
                RequestDate: new Date().toISOString(),
                Status: "Pending",
                Type: "Service"
            };

                $.ajax({
                url: '/Invoice/CreateInvoice',
                method: 'POST',
                data: payload,
                success: function(res){
                    if(res.success){
                        Swal.fire({
                            icon: 'success',
                            title: 'Thành công',
                            text: 'Mã đơn: ' + res.id
                        });
                        $("#invoiceForm")[0].reset();
                    } else {
                        Swal.fire('Lỗi', res.message, 'error');
                    }
                },
                error: function(err){
                    Swal.fire('Lỗi', 'Có lỗi xảy ra', 'error');
                }
            });

        });
    });

</script>